<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:fab="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:background="@color/gdata_red"
        >
        <include android:id="@+id/toolbar" layout="@layout/toolbar"/>

        <LinearLayout android:id="@+id/drawer_layout_ll"
                      xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:background="@color/white"
                        android:layout_below="@+id/toolbar">

            <de.gdata.messaging.SlidingTabLayout
                android:id="@+id/sliding_tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/gdata_red"
                />

            <android.support.v4.view.ViewPager android:id="@+id/pager"
                                               xmlns:android="http://schemas.android.com/apk/res/android"
                                               xmlns:tools="http://schemas.android.com/tools"
                                               android:layout_width="match_parent"
                                               android:layout_height="match_parent"
                                               android:layout_below="@+id/sliding_tabs"
                                               android:textSize="20dp"
                                               android:textStyle="bold"
                                               tools:context=".ActivityUser"/>
        </LinearLayout>
        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="30dp"
            android:src="?attr/menu_new_conversation_icon"
            fab:fab_colorNormal="@color/gdata_red"
            fab:fab_colorPressed="@color/menuItemBackground"
            fab:fab_colorRipple="@color/menuTextColor"
            fab:fab_shadow="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <!-- The navigation drawer -->
    <LinearLayout
        android:id="@+id/drawerll"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@drawable/textview_border"
        android:fitsSystemWindows="true"
        >
    <LinearLayout
        android:id="@+id/drawer"
        android:paddingTop="30dp"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@color/gdata_red"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:orientation="vertical" >

        <org.thoughtcrime.securesms.components.CircledImageView
            android:id="@+id/profile_picture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="left"
            android:layout_weight="2"
            android:scaleType="centerInside"
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/drawer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:id="@+id/profileName"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="test@gmail.com"
                android:id="@+id/profileStatus"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/menuItemBackground"
        android:choiceMode="singleChoice"
        android:divider="@color/menuDivider"
        android:dividerHeight="1px"
        android:scrollbars="none"/>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
