<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingBottom="120dp"
                android:paddingLeft="@dimen/onboarding_margin_land"
                android:paddingRight="@dimen/onboarding_margin_land"
                tools:background="#FF2090ea">

    <ImageView android:id="@+id/watermark"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/onboard_logo"
               tools:src="@drawable/onboard_logo"
               android:contentDescription="@string/PassphrasePromptActivity_watermark_content_description" />

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:gravity="center_vertical"
                  android:orientation="vertical">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium"
                  android:id="@+id/blurb"
                  android:layout_toRightOf="@+id/watermark"
                  android:textSize="24sp"
                  android:textIsSelectable="false"
                  android:paddingLeft="20dp"
                  android:paddingRight="20dp"
                  android:fontFamily="sans-serif-light"
                  tools:text="@string/IntroFragment_one_title"
                  android:textColor="@android:color/white" />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/subblurb"
                  android:layout_below="@id/blurb"
                  android:layout_centerHorizontal="true"
                  android:textSize="18sp"
                  android:textIsSelectable="false"
                  android:layout_marginTop="20dp"
                  android:paddingLeft="20dp"
                  android:paddingRight="20dp"
                  android:fontFamily="sans-serif-light"
                  tools:text="@string/IntroFragment_one_subtitle"
                  android:textColor="#ccffffff" />

     </LinearLayout>

</LinearLayout>
